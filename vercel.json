{
  "name": "comment",
  "github": {
    "silent": true
  },
  "builds": [
    {
      "src": "robots.txt",
      "use": "@vercel/static"
    },
    {
      "src": "index.cjs",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!robots\\.txt$).*)",
      "destination": "index.cjs"
    },
    {
      "source": "/ui(.*)",
      "destination": "dashboard.js"
    }
  ],
  "redirects": [
    {
      "source": "/api/oauth/(.*)",
      "destination": "/api/oauth?type=$1",
      "statusCode": 301
    }
  ]
}
